<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/verticalLinearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/horizontalLinearLayout"
        android:layout_width="410dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="1dp">

        <TextView
            android:id="@+id/groceryItemNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginEnd="6dp"
            android:text="@string/item_name" />

        <TextView
            android:id="@+id/groceryItemAmountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/item_amount" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="1dp">

        <TextView
            android:id="@+id/itemCostTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginEnd="6dp"
            android:text="@string/item_cost" />

        <TextView
            android:id="@+id/storeNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/store_name" />
    </LinearLayout>
</android.widget.LinearLayout>